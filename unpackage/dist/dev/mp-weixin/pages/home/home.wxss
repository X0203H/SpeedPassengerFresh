/* 推荐 */
.recommend {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin: 20px 0;
}
.recommend .item {
  width: 24%;
  margin: 0 20rpx;
  text-align: center;
}
.recommend .item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.recommend .item .name {
  font-size: 24rpx;
}

/* 限时优惠 */
.flash_sale {
  width: 100%;
  white-space: nowrap;
}
.flash_sale .title {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin: 20px 0;
}
.flash_sale .title .big {
  color: "#333333";
  font-size: 48rpx;
  font-weight: 500;
}
.flash_sale .title .endTime {
  display: flex;
  margin-left: 20rpx;
  color: #999999;
}
.flash_sale .title .endTime .item {
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: #333333;
  border-radius: 2px;
}
.flash_sale .list {
  display: flex;
  height: 400rpx;
  padding: 4rpx 20rpx;
  min-width: 100%;
}
.flash_sale .list .items {
  display: inline-block;
  width: 300rpx;
  padding: 0 20rpx;
}
.flash_sale .list .items image {
  width: 260rpx;
  height: 260rpx;
  background-color: #333333;
}
.flash_sale .list .items .del {
  margin-left: 10rpx;
  text-decoration: line-through;
  color: #999999;
}